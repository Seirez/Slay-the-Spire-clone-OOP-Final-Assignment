class Effect{
    int Id;
    public int Heal(int hp,int heal){
        hp+=heal;
        return hp;
    }
    public int Damage(int hp,int dmg,int block){
        if (block==0){
            hp-=dmg;
        }
        else{
            block-=dmg;
        }
        return hp;
    }
}

