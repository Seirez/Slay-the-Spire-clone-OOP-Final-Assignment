class Turn{
    public class Energy{
        int Energy;
        int MaxEnergy;
        public int Increase(int Energy,int Cost){
            Energy=Energy+Cost;
            return Energy;
        }
        public int Reduce(int Energy,int Cost){
            Energy=Energy-Cost;
            return Energy;
        }
        public int Reset(int Max){
            Energy=Max;
            return Energy;
        }
    }
}

class Currency{
    int money;
    public int Buy(int money, int price){
        money = money-price;
        return money;
    }
    public int Sell(int money, int price){
        money = money+price;
        return money;
    }
}

